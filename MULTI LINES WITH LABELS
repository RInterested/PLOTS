### THE BETA DISTRIBUTION ###

prmtr <- c(0.6, 1, 2)
x <- seq(0, 1, 0.001)
plot(1, type="n", main="Gamma Density", 
     ylab = "pdf", xlab = "x",
     xlim=c(0, 1.2), ylim=c(0, 1.1))
for(i in 1:length(prmtr)){
    for(j in 1:length(prmtr)){
        y <- dgamma(x, shape=prmtr[i], scale=prmtr[j])
        lines(y ~ x, col=j)
        text(x=c(1.02,1.07,1.1,1.15,1.2), y = y[x==1]+0.01, 
        labels=c("(", prmtr[i], ":", prmtr[j], ")"), 
        col=j, cex=0.7)
    }
}
